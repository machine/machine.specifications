        <name>Machine Specifications</name>        
        <frameworkAssemblies>Machine.Specifications, Version=@configatron.version.compatible@</frameworkAssemblies>
        <version>@configatron.version.compatible@</version>
        <fileTypes>Assembly</fileTypes>
      </traits>
