  <assemblies>
    <assembly fullName="Machine.Specifications.GallioAdapter.3.1, Version=@configatron.version.compatible@, Culture=neutral, PublicKeyToken=null"
              codeBase="Machine.Specifications.GallioAdapter.3.1.dll"
