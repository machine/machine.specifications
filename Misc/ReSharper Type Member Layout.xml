<!-- Order Machine.Specifications members: static fields, Establish, Cleanup, Because, It, behaviors, everything else -->
<Pattern>
  <Match>
    <And Weight="100">
      <Kind Is="class"/>
      <Or>
        <HasAttribute CLRName="Machine.Specifications.SubjectAttribute"
                Inherit="true"/>
        <Name Is="^when_.+"
            IgnoreCase="true" />
      </Or>
    </And>
  </Match>
  <Entry>
    <Match>
      <And>
        <Kind Is="field"/>
        <Or>
          <Access Is="protected"/>
          <Static/>
        </Or>
      </And>
    </Match>
  </Entry>
  <Entry>
    <Match>
      <And>
        <Kind Is="field"/>
        <Name Is="^context(_once)?$"
              IgnoreCase="true"/>
      </And>
    </Match>
  </Entry>
  <Entry>
    <Match>
      <And>
        <Kind Is="field"/>
        <Name Is="^of$"
            IgnoreCase="true"/>
      </And>
    </Match>
  </Entry>
  <Entry>
    <Match>
      <And>
        <Kind Is="field"/>
        <Name Is="^after(_all)?$"
            IgnoreCase="true"/>
      </And>
    </Match>
  </Entry>
  <Entry>
    <Match>
      <And>
        <Kind Is="field"/>
        <Name Is="^should_.*$"
              IgnoreCase="true"/>
      </And>
    </Match>
  </Entry>
  <Entry>
    <Match>
      <And>
        <Kind Is="field"/>
        <Not>
          <Static/>
        </Not>
      </And>
    </Match>
  </Entry>
  <!-- All other members -->
  <Entry/>
</Pattern>
